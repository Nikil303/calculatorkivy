<MyLayout>
    BoxLayout:
        orientation : "vertical"
        size: root.width,root.height

        TextInput:
            id:input1
            text:"0"
            halign:"right"
            font_size:60
            size_hint:(1,.15)

        GridLayout:
            cols : 3
            rows : 6

            #row
            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "1"
                on_press : root.button_press(1)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "2"
                on_press : root.button_press(2)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "3"
                on_press : root.button_press(3)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "4"
                on_press : root.button_press(4)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "5"
                on_press : root.button_press(5)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "6"
                on_press : root.button_press(6)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "7"
                on_press : root.button_press(7)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "8"
                on_press : root.button_press(8)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "9"
                on_press : root.button_press(9)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "+"
                background_color : (14/255,73/255,176/255, 1)
                on_press : root.airthmetic_symbol("+")
            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "0"
                on_press : root.button_press(0)

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "-"
                background_color : (14/255,73/255,176/255, 1)
                on_press : root.airthmetic_symbol("-")

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "*"
                background_color : (14/255,73/255,176/255, 1)
                on_press : root.airthmetic_symbol("*")

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "="
                background_color : (14/255,73/255,176/255, 1)
                on_press : root.equal()

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "/"
                background_color : (14/255,73/255,176/255, 1)
                on_press : root.airthmetic_symbol("/")

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "<<"
                background_color : (14/255,73/255,176/255, 1)
                on_press : root.remove_last_digit()

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "."
                background_color : (14/255,73/255,176/255, 1)
                on_press : root.dot()

            Button:
                size_hint : (.2,.2)
                font_size : 35
                text : "C"
                background_color : (14/255,73/255,176/255, 1)
                on_press : root.clear()
